<link href="/docs/4.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<link href="album.css" rel="stylesheet">

<!DOCTYPE html>
<html>
  <head>
    <title>User Page</title>
  </head>

  <body>
    <h1><%= @user.name %> Profile</h1>
    <img src="<%= @user.img_url %>" alt="Avatar" class="avatar">
    <br><br>
    <p><b>Email: </b><%= @user.email %></p>
    <br>

    <p>
      <a class="btn btn-secondary" href=/users/<%= @user.id %>/edit role="button">Edit <%= @user.name %> &raquo;</a>
      <a class="btn btn-secondary" href=/users/<%= @user.id %> role="button">Delete <%= @user.name %> &raquo;</a>
    </p>

  <ul style="list-style-type:none;">
      <br>
      <br>

      <% @user.venues.each do |venue| %>
      <li><b>Venue image: </b><img src=<%= venue.img_url %> alt="Venue img" class="vimage"></li>
        <li><b>Venue <%# IDEA:  %>: </b><%= venue.id %></li>
        <li><b>Venue name: </b><%= venue.name %></li>
        <li><b>Venue location: </b><%= venue.location %></li>
        <li><b>Venue price: </b><%= number_to_currency(venue.price) %></li>
        <li><b>Venue activity: </b><%= venue.activity %></li>
        <li><b>Venue amenities: </b><%= venue.amenities.delete('"[]\"').split(",").join(", ") %></li>
      <% end %>

    </ul>
<h3>Booked</h3>
<main role="main">
<div class="album py-5 bg-light">
  <div class="container">

    <div class="row">
      <% @user.venue_bookings.each do |venue| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <img class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" src="<%= venue.img_url %>" </img><rect src="<%= venue.img_url %>"width="100%" height="100%" fill="#55595c"/>
          <div class="card-body">
            <p class="card-text"><%= venue.name %>



            </p>
            <%= link_to "View Details", venue, {class:"btn btn-sm btn-outline-secondary"} %>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%# <%= link_to "View", venue, {class:"btn btn-sm btn-outline-secondary"} %>
                <!-- <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button> -->
              </div>
              <!-- <small class="text-muted">9 mins</small> -->
            </div>
          </div>
        </div>
      </div>
      <% end %>

    </div>
  </div>
  <a href="#">Back to top</a>
</div>
</main>

<h3>Liked</h3>
<main role="main">
<div class="album py-5 bg-light">
  <div class="container">

    <div class="row">
      <% @user.venue_favorites.each do |venue| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <img class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" src="<%= venue.img_url %>" </img><rect src="<%= venue.img_url %>"width="100%" height="100%" fill="#55595c"/>
          <div class="card-body">
            <p class="card-text"><%= venue.name %></p>
            <%= link_to "View Details", venue, {class:"btn btn-sm btn-outline-secondary"} %>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%# <%= link_to "View", venue, {class:"btn btn-sm btn-outline-secondary"} %>
                <!-- <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button> -->
              </div>
              <!-- <small class="text-muted">9 mins</small> -->
            </div>
          </div>
        </div>
      </div>
      <% end %>

    </div>
  </div>
  <a class="center" href="#">Back to top</a>
</div>
</main>
    <%= yield %>
  </body>
</html>
